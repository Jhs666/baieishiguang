/* 列表 */

.list_show {
  width: 94%;
  margin: 0 auto;
}

.list_show .li {
  width: 100%;
  height: 230rpx;
  overflow: hidden;
  margin: 0 auto;
  margin-bottom: 3%;
  background: #fff;
  border-radius: 8px;
  box-shadow: 0 0 16px #ddd;
}

.list_show .li .img {
  width: 40%;
  height: 100%;
  float: left;
  position: relative;
}

.list_show .li .img image {
  width: 100%;
  height: 230rpx;
  display: block;
  margin: 0 auto;
}

.list_show .li .tag {
  width: 86rpx;
  height: 34rpx;
  line-height: 34rpx;
  position: absolute;
  top: 0;
  left: 0;
  background: #43eff9;
  color: #000;
  text-align: center;
  font-size: 20rpx;
}

.list_show .li .title {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  background: rgba(0, 0, 0, 0.4);
  color: #fff;
  text-align: center;
  line-height: 40rpx;
  font-size: 20rpx;
}

.list_show .li .con {
  float: left;
  width: 54%;
  height: 200rpx;
  position: relative;
  padding: 2% 3%;
}

.list_show .li .con .desc {
  color: #000;
  font-size: 28rpx;
  line-height: 40rpx;
}

.list_show .li .con .num {
  position: absolute;
  bottom: 5%;
  left: 3%;
  color: #9b9b9b;
  font-size: 24rpx;
}

.list_show .li .con .qian {
  position: absolute;
  bottom: 5%;
  right: 3%;
  color: #ff001f;
  font-size: 32rpx;
  font-weight: bolder;
}

.no {
  color: #999;
  font-size: 24rpx;
  line-height: 34rpx;
  margin: 5% auto;
  text-align: center;
}

.date {
  color: #999;
  font-size: 28rpx;
  line-height: 40rpx;
  text-align: center;
  margin-bottom: 3%;
}
