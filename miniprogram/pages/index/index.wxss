.banner {
  position: relative;
}

.swpier {
  width: 100%;
  position: relative;
}

.ban {
  width: 100%;
  height: 440rpx;
}

.slide-image {
  width: 100%;
  /* height: 350rpx; */
}

.topbar {
  position: relative;
  top: 0;
  left: 0;
  z-index: 999;
  width: 94%;
  height: 100rpx;
  margin: 0 auto;
  padding: 0 3%;
  background: #f60;
}

.place {
  width: 16%;
  height: 100%;
  overflow: hidden;
  float: left;
}

.place image {
  width: 26rpx;
  height: 30rpx;
  margin: 35rpx 0;
  float: left;
  margin-left: 12%;
}

.place text {
  font-size: 28rpx;
  color: #fff;
  line-height: 100rpx;
  letter-spacing: 2rpx;
  float: left;
}

.search {
  width: 64%;
  height: 60rpx;
  background-color: #fff;
  border-radius: 30rpx;
  float: left;
  margin: 20rpx 0;
}

.search image {
  width: 40rpx;
  height: 40rpx;
  float: left;
  margin: 10rpx 0 10rpx 3%;
}

.search input {
  height: 60rpx;
  color: #bbb;
  font-size: 24rpx;
  line-height: 60rpx;
}

.ri {
  width: 20%;
  overflow: hidden;
  float: right;
}

.ri image {
  width: 50rpx;
  height: 46rpx;
  margin: 27rpx 0;
  float: right;
}

.ri .im1 {
  margin-right: 24rpx;
}

/* 轮播下分类 */

.div {
  width: 94%;
  margin: 3% auto;
  overflow: hidden;
  background: #fff;
  border-radius: 8px;
  box-shadow: 0 0 16px #ddd;
}

.div .ul {
  width: 50%;
  overflow: hidden;
  float: left;
  height: 300rpx;
}

.div .ul .li {
  float: left;
  width: 100%;
  text-align: center;
  margin: 0 2%;
  background-color: red;
}

.div .ul .li image {
  display: block;
  margin: 0 auto;
}

.div .ul .li .img {
  width: 50rpx;
  height: 50rpx;
  margin-bottom: 3%;
}

.div .ul .li text {
  font-size: 28rpx;
  margin: 2% 0;
  color: #000;
}

/* 任务模式 */

.task {
  width: 94%;
  margin: 0 auto;
  border-radius: 8px;
  height: 186rpx;
  overflow: hidden;
}

.task image {
  width: 100%;
  height: 100%;
  display: block;
  margin: 0 auto;
}

/* 大家都在玩 */

.play {
  width: 94%;
  margin: 4% auto 0;
  overflow: hidden;
}

.play .play_left {
  font-size: 32rpx;
  float: left;
  font-weight: bolder;
  color: #000;
  line-height: 44rpx;
}

.play .play_right {
  float: right;
  font-size: 24rpx;
  color: #4a4a4a;
  line-height: 44rpx;
}

.play .img {
  width: 28rpx;
  height: 32rpx;
  margin-left: 2%;
}
.play .ri {
  width: 40rpx;
  height: 40rpx;
  float: right;
  margin-top: 2rpx;
}
.beijing {
  width: 94%;
  height: 350rpx;
  margin: 3% auto;
  background: #fff;
  border-radius: 8px;
  overflow: hidden;
  box-shadow: 0 0 16px #ddd;
}
.beijing .left {
  width: 440rpx;
  height: 100%;
  position: relative;
  float: left;
}

.beijing .left image {
  width: 100%;
  height: 350rpx;
  display: block;
  margin: 0 auto;
}

.beijing .left .mask {
  position: absolute;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.4);
  top: 0;
  left: 0;
}

.beijing .left .mask .money {
  width: 140rpx;
  height: 48rpx;
  background: #43eff9;
  position: absolute;
  top: 0;
  right: 0;
  text-align: center;
  font-size: 24rpx;
  line-height: 48rpx;
}

.beijing .left .mask .wenben {
  position: absolute;
  bottom: 0;
  width: 94%;
  margin: 4% 3%;
  color: #fff;
}

.beijing .left .mask .wenben text {
  font-size: 40rpx;
  line-height: 46rpx;
  margin: 3% 0;
}

.beijing .left .mask .wenben .rich rich-text {
  font-size: 24rpx;
  line-height: 34rpx;
  margin: 4% 0;
  float: left;
}

.beijing .right {
  width: 220rpx;
  height: 58rpx;
  float: left;
  margin-left: 4%;
}

.beijing .right .inform text {
  font-size: 24rpx;
  color: #4a4a4a;
}

.beijing .right .inform {
  height: 58rpx;
}

.beijing .right .inform .hot {
  width: 40rpx;
  height: 20rpx;
  margin-left: 5%;
}

/* 查看更多 */

.more {
  width: 96%;
  margin: 3% auto;
  text-align: center;
}

.more text {
  font-size: 24rpx;
  color: #d8d8d8;
}