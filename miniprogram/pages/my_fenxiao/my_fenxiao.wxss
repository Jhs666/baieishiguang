/* 猜你喜欢 */

.like {
  width: 94%;
  background: #fff;
  overflow: hidden;
  padding: 3% 3%;
  margin: 3% 0;
}

.like .ul {
  width: 100%;
  overflow: hidden;
  margin: 4% 0 2%;
}

.like .title {
  font-size: 32rpx;
  color: #000;
  line-height: 44rpx;
  font-weight: bolder;
}

.like .ul .li {
  width: 220rpx;
  float: left;
  border: 1px solid #d8d8d8;
  margin: 0 0.8%;
}

.like .ul .li .img {
  width: 100%;
  height: 170rpx;
  overflow: hidden;
  position: relative;
}

.like .ul .li .img image {
  width: 100%;
  height: 170rpx;
}

.like .ul .li .img .zuijin {
  color: #000;
  font-size: 20rpx;
  background: #43eff9;
  text-align: center;
  line-height: 28rpx;
  position: absolute;
  top: 0;
  left: 0;
  padding: 0 2%;
}

.like .ul .li .img .tag {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 30rpx;
}

.like .ul .li .img .tag text {
  background: rgba(0, 0, 0, 0.4);
  color: #fff;
  text-align: center;
  font-size: 20rpx;
  line-height: 28rpx;
  float: left;
  margin-right: 5%;
  padding: 0 2%;
}

.like .ul .li .text {
  width: 100%;
  text-align: center;
  margin: 5% 0;
}

.like .ul .li .text .zhu {
  color: #000;
  font-size: 20rpx;
  line-height: 36rpx;
}

.like .ul .li .text .fu {
  color: #9b9b9b;
  font-size: 20rpx;
  line-height: 28rpx;
}
