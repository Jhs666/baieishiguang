.top {
  width: 100%;
  height: 440rpx;
  overflow: hidden;
}

.back {
  width: 94%;
  height: 300rpx;
  background: linear-gradient(to bottom, #06b3ed 0%, #0152de 100%);
  padding: 0 3%;
  position: relative;
}

.shezhi {
  width: 42rpx;
  height: 40rpx;
  overflow: hidden;
  position: absolute;
  top: 3%;
  left: 3%;
}

.shezhi image {
  width: 100%;
  height: 40rpx;
}

.xiaoxi {
  width: 44rpx;
  height: 40rpx;
  overflow: hidden;
  position: absolute;
  top: 3%;
  right: 3%;
}

.xiaoxi image {
  width: 100%;
  height: 40rpx;
}

.user {
  width: 94%;
  height: 326rpx;
  margin: 0 auto;
  background: #fff;
  border-radius: 8px;
  box-shadow: 0 0 16px #ddd;
  position: absolute;
  top: 30%;
}

.user .fenxiao {
  width: 94%;
  overflow: hidden;
  padding: 3%;
}

.user .fenxiao .h1 {
  font-size: 32rpx;
  color: #037de5;
  line-height: 44rpx;
  float: left;
  font-weight: bolder;
}

.user .fenxiao .rule {
  font-size: 24rpx;
  color: #9b9b9b;
  line-height: 44rpx;
  float: right;
  margin-right: 2%;
}

.user .fenxiao image {
  width: 26rpx;
  height: 26rpx;
  float: right;
  margin: 9rpx 0;
}

.user .pro {
  font-size: 28rpx;
  color: #4a4a4a;
  line-height: 40rpx;
  padding: 0 3%;
}

.user .line {
  width: 94%;
  height: 1px;
  background: #efefef;
  margin: 6% auto 0;
}

.user .ul {
  width: 96%;
  padding: 2%;
  margin: 0 auto;
  overflow: hidden;
}

.user .ul .li {
  float: left;
  width: 33%;
  text-align: center;
  border-right: 1px solid #efefef;
}

.user .ul .li text {
  font-size: 32rpx;
  color: #000;
  line-height: 44rpx;
  font-weight: bolder;
}

.user .ul .li rich-text {
  font-size: 28rpx;
  color: #999;
  line-height: 50rpx;
}

/* 我的订单 */

.goods {
  width: 94%;
  background: #fff;
  overflow: hidden;
  padding: 3% 3%;
}

.goods .ul {
  width: 100%;
  overflow: hidden;
  margin: 4% 0 0;
}

.goods .ul .li {
  float: left;
  width: 20%;
  text-align: center;
}

.goods .ul .li image {
  width: 46rpx;
  height: 44rpx;
  display: block;
  margin: 0 auto;
}

.goods .title {
  font-size: 32rpx;
  color: #000;
  line-height: 44rpx;
  font-weight: bolder;
}

.goods .ul .li .small {
  font-size: 24rpx;
  color: #666;
  line-height: 34rpx;
  letter-spacing: 2rpx;
}

